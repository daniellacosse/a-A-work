<%= current_user.try(:email) %>

<form action="<%= session_url %>" method="post">

  <input
    type="hidden"
    name="_method"
    value="delete"
    id="_method">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <p>
    <input type="submit" value="Log out">
  </p>

</form>