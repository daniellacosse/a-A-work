<form action="<%= band_albums_url %>" method="post">

  <%= auth_token %>

  <p>
    <label for="album_title">
      Album Title:
    </label>

    <input
      type="text"
      name="album[title]"
      id="album_title">
  </p>

  <p>
    <label for="album_band_id">
      Album Artist:
    </label>

    <select name="album[band_id]" id="album_band_id">
      <option></option>
      <% Band.all.each do |b| %>

        <option
          value="<%= b.id %>"
          <%= "selected" if params[:band_id] == b.id.to_s %> >
            <%= b.band_name %>
        </option>

      <% end %>
    </select>
  </p>

  <p>Recording Type:</p>

  <p>
    <input
      type="radio"
      name="album[recording]"
      id="album_recording"
      value="studio">

    <label for="album_recording">
      Studio Recording
    </label>

    <input
      type="radio"
      name="album[recording]"
      id="album_recording"
      value="live">

    <label for="album_recording">
      Live Recording
    </label>
  </p>

  <p>
    <input type="submit" value="Register">
  </p>

</form>